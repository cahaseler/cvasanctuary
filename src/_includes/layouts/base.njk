              <li><a href="{{ '/newsletter' | url }}">Newsletter</a></li>
              <li><a href="{{ '/communitypartners' | url }}">Partners</a></li>
              <li><a href="{{ '/forever-angels' | url }}">Forever Angels</a></li>
            </ul>
          </li>
          <li><a href="{{ '/kitten-cam-live' | url }}">Kitten Cam Live</a></li>
          <li><a href="{{ '/community-resources' | url }}">Resources</a></li>
          <li><a href="{{ '/contact-us' | url }}">Contact and Hours</a></li>
