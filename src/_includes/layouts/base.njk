{%- set settings = collections.settings | first -%}
{%- set siteSettings = settings.data if settings else {} -%}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title or siteSettings.site.title }}</title>
  <meta name="description" content="{{ description or siteSettings.site.description }}">
  
  <link rel="stylesheet" href="{{ '/assets/css/main.css' | url }}">
  
  <!-- Favicons -->
  <link rel="icon" type="image/png" sizes="32x32" href="{{ '/assets/images/favicon-32x32.png' | url }}">
  <link rel="icon" type="image/png" sizes="16x16" href="{{ '/assets/images/favicon-16x16.png' | url }}">
  
  <!-- Open Graph -->
  <meta property="og:title" content="{{ title or siteSettings.site.title }}">
  <meta property="og:description" content="{{ description or siteSettings.site.tagline }}">
  <meta property="og:type" content="website">
  <meta property="og:url" content="{{ siteSettings.site.url }}{{ page.url }}">
</head>
<body>
  <header class="site-header">
    <nav class="nav-primary">
      <div class="container">
        <a href="{{ '/' | url }}" class="logo">
          <img src="{{ siteSettings.site.logo | url }}" alt="{{ siteSettings.site.title }} Logo" style="height: {{ siteSettings.site.logoHeight }}; width: auto;">
        </a>
        
        <button class="nav-toggle" aria-label="Menu">
          <span></span>
          <span></span>
          <span></span>
        </button>
        
        <ul class="nav-menu">
          {% for item in siteSettings.navigation %}
          <li{% if item.dropdown %} class="has-dropdown"{% endif %}>
            <a href="{{ item.url | url }}">{{ item.label }}</a>
            {% if item.dropdown %}
            <ul class="dropdown">
              {% for subitem in item.dropdown %}
              <li><a href="{{ subitem.url | url }}">{{ subitem.label }}</a></li>
              {% endfor %}
            </ul>
            {% endif %}
          </li>
          {% endfor %}
          <li><a href="{{ siteSettings.donateButton.url | url }}" class="btn btn-primary">{{ siteSettings.donateButton.label }}</a></li>
        </ul>
      </div>
    </nav>
  </header>
  
  <main>
    {{ content | safe }}
  </main>
  
  <footer class="site-footer">
    <div class="container">
      <div class="footer-content">
        <div class="footer-section">
          <h3>Contact</h3>
          <address>
            {{ siteSettings.contact.street }}<br>
            {{ siteSettings.contact.city }}, {{ siteSettings.contact.state }} {{ siteSettings.contact.zip }}<br>
            <a href="tel:{{ siteSettings.contact.phone }}">{{ siteSettings.contact.phone }}</a><br>
            <a href="mailto:{{ siteSettings.contact.email }}">{{ siteSettings.contact.email }}</a>
          </address>
          <p><strong>Hours:</strong> {{ siteSettings.contact.hoursText }}<br>
          {{ siteSettings.contact.hoursDays }}, {{ siteSettings.contact.hoursTime }}</p>
        </div>
        
        <div class="footer-section">
          <h3>Info</h3>
          <ul>
            {% for link in siteSettings.footerInfo %}
            <li><a href="{{ link.url | url }}">{{ link.label }}</a></li>
            {% endfor %}
          </ul>
        </div>
        
        <div class="footer-section">
          <h3>Action</h3>
          <ul>
            {% for link in siteSettings.footerAction %}
            <li><a href="{{ link.url | url }}">{{ link.label }}</a></li>
            {% endfor %}
          </ul>
        </div>
        
        <div class="footer-section">
          <h3>Follow Us</h3>
          <div class="social-links">
            <a href="{{ siteSettings.social.facebook }}" aria-label="Facebook">
              <svg viewBox="0 0 24 24" width="24" height="24">
