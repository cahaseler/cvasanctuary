---
layout: layouts/base.njk
---

<style>
  .impact-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    background: transparent !important;
  }

  .impact-title {
    text-align: center;
    font-size: 2.5rem;
    color: var(--color-primary);
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .impact-section {
    margin-bottom: 1rem;
    background: transparent !important;
  }

  .impact-section h2 {
    color: var(--color-primary);
    font-size: 1.8rem;
    margin-top: 0;
    margin-bottom: 1.5rem;
  }

  .impact-section h3 {
    color: var(--color-primary);
    font-size: 1.4rem;
    margin: 2rem 0 1rem;
  }

  .impact-section p {
    line-height: 1.8;
    margin-bottom: 1.5rem;
    font-size: 1.1rem;
  }

  /* Adoptions section two-column layout */
  .adoptions-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    align-items: start;
  }
  
  @media (min-width: 768px) {
    .adoptions-grid {
      grid-template-columns: 1fr 1fr;
    }
  }
  
  .adoptions-left img {
    width: 100%;
    height: auto;
    margin-bottom: 1.5rem;
  }
  
  .adoptions-right img {
    width: 100%;
    height: auto;
    margin-bottom: 1.5rem;
    border-radius: 8px;
  }

  /* History images */
  .history-images {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin: 2rem 0;
  }
  
  @media (min-width: 768px) {
    .history-images {
      grid-template-columns: 1fr 1fr;
    }
    
    .history-images figure:first-child {
      grid-column: 1 / -1;
    }
  }

  .history-images figure {
    margin: 0;
    text-align: center;
  }

  .history-images img {
    width: 100%;
    height: auto;
    display: block;
    margin: 0 auto;
    border-radius: 4px;
  }

  .history-images figcaption {
    margin-top: 0.5rem;
    font-style: italic;
    color: #666;
  }

  /* Charts */
  .charts-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin: 2rem 0;
  }

  .charts-row img {
    width: 100%;
    height: auto;
  }

  /* Fire Kittens carousel */
  .warning-box {
    background: #fff3cd;
    border: 1px solid #ffc107;
    padding: 1rem;
    margin: 1rem 0;
    border-radius: 4px;
    text-align: center;
  }

  .kitten-carousel {
    position: relative;
    max-width: 800px;
    margin: 2rem auto;
  }

  .carousel-viewport {
    overflow: hidden;
    border-radius: 8px;
  }

  .carousel-container {
    display: flex;
    transition: transform 0.3s ease;
  }

  .carousel-slide {
    min-width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .carousel-slide img {
    width: 100%;
    height: auto;
    object-fit: contain;
    max-height: 500px;
  }

  .carousel-nav {
    margin-top: 1rem;
  }

  .carousel-controls {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .carousel-btn {
    background: var(--color-primary);
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    cursor: pointer;
    border-radius: 4px;
  }

  .carousel-btn:hover {
    background: var(--color-primary-dark);
  }

  .carousel-dots {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
  }

  .dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    border: none;
    background: #ccc;
    cursor: pointer;
  }

  .dot.active {
    background: var(--color-primary);
  }

  /* Volunteers section */
  .volunteers-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    align-items: start;
  }
  
  @media (min-width: 768px) {
    .volunteers-content {
      grid-template-columns: 2fr 1fr;
    }
  }
  
  .volunteers-image img {
    width: 100%;
    height: auto;
    border-radius: 8px;
  }
  
  .volunteer-charts {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-top: 2rem;
  }
  
  .volunteer-charts img {
    width: 100%;
    height: auto;
  }

  /* Programs section */
  .program-charts {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-top: 2rem;
  }
  
  .program-charts img {
    width: 100%;
    height: auto;
  }

  /* Stats */
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin: 2rem auto;
    max-width: 600px;
  }

  .stats-grid img {
    width: 100%;
    height: auto;
  }
  
  .stats-charts {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin: 2rem auto;
    max-width: 600px;
  }
  
  .stats-charts img {
    width: 100%;
    height: auto;
  }

  /* Call to action */
  .cta-section {
    background: var(--color-primary);
    color: white;
    padding: 3rem 2rem;
    border-radius: 8px;
    text-align: center;
    margin-top: 3rem;
  }

  .cta-section h2 {
    color: white;
    margin-bottom: 2rem;
  }

  .cta-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .cta-item {
    text-align: center;
  }

  .cta-item a {
    color: white;
    text-decoration: none;
    font-size: 1.2rem;
    font-weight: bold;
    display: block;
    padding: 1rem;
    background: rgba(255,255,255,0.1);
    border-radius: 8px;
    transition: background 0.3s;
  }

  .cta-item a:hover {
    background: rgba(255,255,255,0.2);
  }

  /* Moving Forward section with two columns */
  .moving-forward-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    align-items: start;
  }
  
  @media (min-width: 768px) {
    .moving-forward-content {
      grid-template-columns: 1fr 1fr;
    }
  }
  
  .moving-forward-section img {
    width: 100%;
    height: auto;
    border-radius: 8px;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .impact-title {
      font-size: 2rem;
    }

    .charts-row,
    .kitten-images,
    .stats-grid {
      grid-template-columns: 1fr;
    }

    .cta-grid {
      grid-template-columns: 1fr 1fr;
    }
  }
</style>

<div class="impact-page">
  <h1 class="impact-title">{{ title }}</h1>

  <!-- History Section -->
  <section class="impact-section">
    {{ content | safe | replace("## History of CVAS", "<h2>History of CVAS</h2>") | replace("</h2>", "</h2><div>") | replace("</ul>", "</ul></div>") | safe }}
    
    {% if history_images %}
    <div class="history-images">
      {% for image in history_images %}
      <figure>
        <img src="{{ image.src | url }}" alt="{{ image.alt }}">
        <figcaption>{{ image.caption }}</figcaption>
      </figure>
      {% endfor %}
    </div>
    {% endif %}
  </section>

  <!-- Adoptions Section -->
  <section class="impact-section adoptions-section">
    {% set adoptions_content = content | safe %}
    {% set adoptions_start = adoptions_content.indexOf("## Adoptions") %}
    {% set fire_kittens_start = adoptions_content.indexOf("## Fire Kittens") %}
    {% if adoptions_start > -1 and fire_kittens_start > -1 %}
      {% set adoptions_section = adoptions_content.substring(adoptions_start, fire_kittens_start) %}
      
      <div class="adoptions-grid">
        <div class="adoptions-left">
          {{ adoptions_section | replace("## Adoptions", "<h2>Adoptions</h2>") | safe }}
          
          {% if adoption_charts.cat_stats %}
            <img src="{{ adoption_charts.cat_stats | url }}" alt="Cat Statistics 2017-2020">
          {% endif %}
          {% if adoption_charts.dog_stats %}
            <img src="{{ adoption_charts.dog_stats | url }}" alt="Dog Statistics 2017-2020">
          {% endif %}
        </div>
        <div class="adoptions-right">
          {% if adoption_charts.dog_image %}
            <img src="{{ adoption_charts.dog_image | url }}" alt="Dog">
          {% endif %}
          {% if adoption_charts.cat_image %}
            <img src="{{ adoption_charts.cat_image | url }}" alt="Cats">
          {% endif %}
        </div>
      </div>
    {% endif %}
  </section>

  <!-- Fire Kittens Section -->
  <section class="impact-section">
    {% set fire_content = content | safe %}
    {% set fire_start = fire_content.indexOf("## Fire Kittens") %}
    {% set volunteers_start = fire_content.indexOf("## Volunteers") %}
    {% if fire_start > -1 and volunteers_start > -1 %}
      {% set fire_section = fire_content.substring(fire_start, volunteers_start) %}
      {{ fire_section | replace("## Fire Kittens", "<h2>Fire Kittens") | replace("2020", "2020</h2>") | replace("**These slides", "<div class='warning-box'><strong>These slides") | replace("discretion.**", "discretion.</strong></div>") | safe }}
    {% endif %}
    
    {% if fire_kitten_slides %}
    <div class="kitten-carousel">
      <div class="carousel-viewport">
        <div class="carousel-container">
          {% for slide in fire_kitten_slides %}
          <div class="carousel-slide">
            <img src="{{ slide.src | url }}" alt="{{ slide.alt }}">
          </div>
          {% endfor %}
        </div>
      </div>
      <div class="carousel-nav">
        <div class="carousel-controls">
          <button class="carousel-btn carousel-prev">Previous</button>
          <button class="carousel-btn carousel-next">Next</button>
        </div>
        <div class="carousel-dots">
          {% for slide in fire_kitten_slides %}
          <button class="dot {% if loop.first %}active{% endif %}" aria-label="Slide {{ loop.index }}"></button>
          {% endfor %}
        </div>
      </div>
    </div>
    {% endif %}
  </section>

  <!-- Volunteers Section -->
  <section class="impact-section volunteers-section">
    {% set vol_content = content | safe %}
    {% set vol_start = vol_content.indexOf("## Volunteers") %}
    {% set programs_start = vol_content.indexOf("## Programs") %}
    {% if vol_start > -1 and programs_start > -1 %}
      {% set vol_section = vol_content.substring(vol_start, programs_start) %}
      
      <div class="volunteers-content">
        <div class="volunteers-text">
          {{ vol_section | replace("## Volunteers", "<h2>Volunteers</h2>") | safe }}
        </div>
        <div class="volunteers-image">
          {% if volunteer_images.kitten %}
            <img src="{{ volunteer_images.kitten | url }}" alt="Tiny kitten in hands">
          {% endif %}
        </div>
      </div>
      
      {% if volunteer_images.hours_2019 and volunteer_images.hours_2020 %}
      <div class="volunteer-charts">
        <img src="{{ volunteer_images.hours_2019 | url }}" alt="Volunteer Hours 2019">
        <img src="{{ volunteer_images.hours_2020 | url }}" alt="Volunteer Hours 2020">
      </div>
      {% endif %}
    {% endif %}
  </section>

  <!-- Programs Section -->
  <section class="impact-section programs-section">
    {% set prog_content = content | safe %}
    {% set prog_start = prog_content.indexOf("## Programs") %}
    {% set moving_start = prog_content.indexOf("## Moving Forward") %}
    {% if prog_start > -1 and moving_start > -1 %}
      {% set prog_section = prog_content.substring(prog_start, moving_start) %}
      {{ prog_section | replace("## Programs", "<h2>Programs</h2>") | safe }}
      
      {% if program_charts.households and program_charts.animals %}
      <div class="program-charts">
        <img src="{{ program_charts.households | url }}" alt="Households helped 2017-2020">
        <img src="{{ program_charts.animals | url }}" alt="Animals helped 2017-2020">
      </div>
      {% endif %}
    {% endif %}
  </section>

  <!-- Moving Forward Section -->
  <section class="impact-section moving-forward-section">
    {% set moving_content = content | safe %}
    {% set moving_start = moving_content.indexOf("## Moving Forward") %}
    {% if moving_start > -1 %}
      {% set moving_section = moving_content.substring(moving_start) %}
      
      <h2>Moving Forward - How Can You help us help them?</h2>
      <div class="moving-forward-content">
        <div class="moving-forward-text">
          {{ moving_section | replace("## Moving Forward - How Can You help us help them?", "") | safe }}
        </div>
        <div class="moving-forward-image">
          {% if moving_forward_image %}
            <img src="{{ moving_forward_image | url }}" alt="Abby">
          {% endif %}
        </div>
      </div>
    {% endif %}
  </section>

</div>

<script>
  // Carousel functionality
  const container = document.querySelector('.carousel-container');
  const slides = document.querySelectorAll('.carousel-slide');
  const dots = document.querySelectorAll('.dot');
  const prevBtn = document.querySelector('.carousel-prev');
  const nextBtn = document.querySelector('.carousel-next');
  
  let currentSlide = 0;
  
  function showSlide(index) {
    if (container && slides.length > 0) {
      currentSlide = (index + slides.length) % slides.length;
      container.style.transform = `translateX(-${currentSlide * 100}%)`;
      
      // Update dots
      dots.forEach((dot, i) => {
        dot.classList.toggle('active', i === currentSlide);
      });
    }
  }
  
  // Add event listeners
  if (prevBtn) {
    prevBtn.addEventListener('click', () => showSlide(currentSlide - 1));
  }
  
  if (nextBtn) {
    nextBtn.addEventListener('click', () => showSlide(currentSlide + 1));
  }
  
  dots.forEach((dot, index) => {
    dot.addEventListener('click', () => showSlide(index));
  });
  
  // Auto-play (optional)
  // setInterval(() => showSlide(currentSlide + 1), 5000);
</script>