---
layout: layouts/base.njk
---

<div class="hero">
  <div class="container">
    <h1>{{ hero.title }}</h1>
  </div>
</div>

<section class="sss-main">
  <div class="container">
    <div class="overview-section">
      <p class="overview-text">{{ overview.description }}</p>
      <p class="call-to-action">
        {{ overview.callToAction | safe }}
        <a href="/adopt/" class="adoptable-link">Adoptable Pets</a>
      </p>
      <p class="appointment-text">{{ appointment.text }}</p>
    </div>

    <div class="two-column-layout">
      <div class="left-column">
        {% if eligibility %}
        <div class="eligibility-section">
          <h2>{{ eligibility.title }}</h2>
          <ul class="requirements-list">
            {% for requirement in eligibility.requirements %}
            <li>{{ requirement }}</li>
            {% endfor %}
          </ul>
        </div>
        {% endif %}

        <div class="contact-section">
          <h2>{{ contactInfo.title }}</h2>
          <div class="contact-info">
            <a href="tel:{{ contactInfo.phone }}" class="phone-number">{{ contactInfo.phone }}</a>
          </div>
          {% if contactInfo.location %}
          <div class="location-info">
            <h3>{{ contactInfo.location.title }}</h3>
            <p class="address">
              {{ contactInfo.location.street }}<br>
              {{ contactInfo.location.city }}, {{ contactInfo.location.state }} {{ contactInfo.location.zip }}
            </p>
          </div>
          {% endif %}
        </div>
      </div>

      <div class="right-column">
        {% if successStory %}
        <div class="success-story">
          <div class="story-image">
            <img src="{{ successStory.image.src | url }}" alt="{{ successStory.image.alt }}" class="snook-photo">
            <p class="image-caption">{{ successStory.caption }}</p>
          </div>
        </div>
        {% endif %}
      </div>
    </div>

    <div class="adopt-section">
      <a href="/adopt/" class="btn-adopt">Adopt</a>
    </div>
  </div>
</section>

<style>
  .hero {
    background: linear-gradient(135deg, #4a7c59 0%, #6b9e77 100%);
    color: white;
    padding: 4rem 0;
    margin-bottom: 3rem;
  }

  .hero h1 {
    font-size: 2.8rem;
    margin: 0;
    text-align: center;
  }

  .sss-main {
    padding: 2rem 0 4rem;
  }

  .overview-section {
    text-align: center;
    margin-bottom: 3rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .overview-text {
    font-size: 1.2rem;
    line-height: 1.8;
    color: #333;
    margin-bottom: 1.5rem;
  }

  .overview-text strong {
    color: #4a7c59;
    font-weight: 600;
  }

  .call-to-action {
    font-size: 1.1rem;
    line-height: 1.7;
    color: #555;
    margin-bottom: 1rem;
  }

  .adoptable-link {
    color: #4a7c59;
    font-weight: 600;
    text-decoration: underline;
  }

  .adoptable-link:hover {
    color: #5a8c69;
  }

  .appointment-text {
    font-size: 1.1rem;
    color: #555;
    font-weight: 500;
  }

  .two-column-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: start;
    margin-bottom: 3rem;
  }

  .left-column {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .eligibility-section {
    padding: 0;
    margin-bottom: 0;
  }

  .eligibility-section h2 {
    color: #4a7c59;
    font-size: 1.6rem;
    margin-bottom: 1.5rem;
    text-align: left;
  }

  .requirements-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .requirements-list li {
    padding: 0.8rem 0;
    border-bottom: 1px solid #e0e0e0;
    color: #555;
    font-size: 1.1rem;
    text-align: left;
  }

  .requirements-list li:last-child {
    border-bottom: none;
  }

  .requirements-list li:before {
    content: "âœ“ ";
    color: #4a7c59;
    font-weight: bold;
    margin-right: 0.5rem;
  }

  .contact-section {
    text-align: left;
    margin-bottom: 0;
  }

  .contact-section h2 {
    color: #4a7c59;
    font-size: 1.8rem;
    margin-bottom: 1.5rem;
  }

  .contact-info {
    margin-bottom: 2rem;
  }

  .phone-number {
    font-size: 1.8rem;
    color: #4a7c59;
    font-weight: bold;
    text-decoration: none;
  }

  .phone-number:hover {
    color: #5a8c69;
    text-decoration: underline;
  }

  .location-info h3 {
    color: #4a7c59;
    font-size: 1.4rem;
    margin-bottom: 1rem;
  }

  .address {
    font-size: 1.1rem;
    line-height: 1.6;
    color: #555;
  }

  .success-story {
    margin: 0;
  }

  .story-image {
    max-width: 100%;
    margin: 0;
  }

  .snook-photo {
    width: 100%;
    border-radius: 12px;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
  }

  .image-caption {
    margin-top: 1rem;
    font-size: 1rem;
    color: #666;
    font-style: italic;
    text-align: center;
  }

  .adopt-section {
    text-align: center;
    margin-top: 3rem;
  }

  .btn-adopt {
    display: inline-block;
    background: #4a7c59;
    color: white;
    padding: 1rem 3rem;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.2rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
  }

  .btn-adopt:hover {
    background: #5a8c69;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(74, 124, 89, 0.3);
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
      padding: 0 1rem;
    }

    .overview-text {
      font-size: 1.1rem;
    }

    .two-column-layout {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .left-column {
      order: 2;
    }

    .right-column {
      order: 1;
    }

    .eligibility-section h2,
    .contact-section h2 {
      text-align: center;
    }

    .requirements-list li {
      text-align: center;
    }

    .contact-section {
      text-align: center;
    }

    .phone-number {
      font-size: 1.5rem;
    }

    .sss-main {
      padding: 1rem 0 3rem;
    }

    .container {
      padding: 0 1rem;
    }
  }
</style>