---
layout: layouts/base.njk
---

<div class="hero">
  <div class="container">
    <h1>{{ hero.title }}</h1>
  </div>
</div>

<div class="clinic-content">
  <div class="container">
    
    <!-- Main Info Section -->
    <div class="clinic-info">
      <p class="clinic-description">{{ programInfo.description }}</p>
      <div class="clinic-type">{{ programInfo.type }}</div>
    </div>

    <!-- Schedule Section -->
    <section class="schedule-section">
      <h2>{{ schedule.year }} Clinic Dates/Time</h2>
      <p class="clinic-hours">Clinics run from <strong>{{ schedule.time }}</strong></p>
      
      <div class="dates-grid">
        {% for clinicDate in schedule.clinicDates %}
        <div class="date-item {% if clinicDate.status == 'canceled' %}canceled{% elif clinicDate.status == 'weather' %}weather-dependent{% endif %}">
          <span class="date">{{ clinicDate.date }}</span>
          {% if clinicDate.note %}
          <span class="note">{{ clinicDate.note }}</span>
          {% endif %}
        </div>
        {% endfor %}
      </div>
    </section>

    <!-- Location Section -->
    <section class="location-section">
      <h2>Location</h2>
      <div class="location-info">
        <p class="location-type">Clinics are drive-thru at our facility at:</p>
        <address>
          <strong>{{ location.name }}</strong><br>
          {{ location.street }}<br>
          {{ location.city }}, {{ location.state }} {{ location.zip }}
        </address>
      </div>
      
      {% if not contactInfo.appointmentNeeded %}
      <div class="appointment-info">
        <p class="no-appointment">No Appointment Needed</p>
      </div>
      {% endif %}
    </section>

    <!-- Contact Section -->
    <section class="contact-section">
      <h2>Contact Information</h2>
      <div class="contact-details">
        <p>For more information about services and pricing, please contact us:</p>
        <p class="contact-phone">
          <strong>Phone:</strong> <a href="tel:{{ contactInfo.phone | replace('-', '') }}">{{ contactInfo.phone }}</a>
        </p>
        <p class="contact-email">
          <strong>Email:</strong> <a href="mailto:{{ contactInfo.email }}">{{ contactInfo.email }}</a>
        </p>
      </div>
    </section>

  </div>
</div>

<style>
  .hero {
    background: linear-gradient(135deg, #4a7c59 0%, #6b9e77 100%);
    color: white;
    padding: 4rem 0;
    margin-bottom: 3rem;
  }

  .hero h1 {
    font-size: 3rem;
    margin: 0;
    text-align: center;
  }

  .clinic-content {
    padding: 2rem 0 4rem;
  }

  .clinic-content .container {
    max-width: 1000px;
  }

  .clinic-info {
    text-align: center;
    margin-bottom: 3rem;
  }

  .clinic-description {
    font-size: 1.3rem;
    color: #333;
    margin-bottom: 1rem;
  }

  .clinic-type {
    display: inline-block;
    background: #4a7c59;
    color: white;
    padding: 0.5rem 1.5rem;
    border-radius: 25px;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.9rem;
    letter-spacing: 1px;
  }

  .schedule-section,
  .location-section,
  .contact-section {
    margin-bottom: 3rem;
  }

  .schedule-section h2,
  .location-section h2,
  .contact-section h2 {
    color: #4a7c59;
    font-size: 2rem;
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid #4a7c59;
  }

  .clinic-hours {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    text-align: center;
  }

  .dates-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .date-item {
    background: #f8fbf4;
    padding: 1.5rem;
    border-radius: 8px;
    text-align: center;
    border: 2px solid #e0e0e0;
    transition: all 0.3s ease;
  }

  .date-item:hover:not(.canceled) {
    border-color: #4a7c59;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }

  .date-item .date {
    font-size: 1.1rem;
    font-weight: 600;
    color: #333;
    display: block;
  }

  .date-item .note {
    display: block;
    margin-top: 0.5rem;
    font-size: 0.9rem;
    font-weight: 600;
  }

  .date-item.canceled {
    background: #fee;
    border-color: #f99;
    opacity: 0.7;
  }

  .date-item.canceled .date {
    text-decoration: line-through;
    color: #999;
  }

  .date-item.canceled .note {
    color: #c00;
  }

  .date-item.weather-dependent {
    background: #fff9e6;
    border-color: #ffcc66;
  }

  .date-item.weather-dependent .note {
    color: #996600;
    font-style: italic;
  }

  .location-info {
    background: #f8fbf4;
    padding: 2rem;
    border-radius: 8px;
    margin-bottom: 1.5rem;
  }

  .location-type {
    font-size: 1.1rem;
    margin-bottom: 1rem;
    color: #333;
  }

  .location-info address {
    font-style: normal;
    line-height: 1.8;
    font-size: 1.1rem;
  }

  .appointment-info {
    text-align: center;
  }

  .no-appointment {
    display: inline-block;
    background: #4a7c59;
    color: white;
    padding: 1rem 2rem;
    border-radius: 8px;
    font-size: 1.2rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .contact-details {
    background: #f8fbf4;
    padding: 2rem;
    border-radius: 8px;
  }

  .contact-details p {
    margin: 0.5rem 0;
    font-size: 1.1rem;
  }

  .contact-phone a,
  .contact-email a {
    color: #4a7c59;
    text-decoration: none;
  }

  .contact-phone a:hover,
  .contact-email a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
    }

    .dates-grid {
      grid-template-columns: 1fr;
    }

    .location-info,
    .contact-details {
      padding: 1.5rem;
    }
  }
</style>