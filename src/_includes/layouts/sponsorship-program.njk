---
layout: layouts/base.njk
---

<div class="hero">
  <div class="container">
    <h1>{{ hero.title }}</h1>
  </div>
</div>

<section class="sponsorship-main">
  <div class="container">
    <div class="overview-section">
      <p class="overview-text">{{ overview.description }}</p>
    </div>

    {% if sponsorshipTiers and sponsorshipTiers.length > 0 %}
    <div class="sponsorship-options">
      <h2>Sponsorship Options</h2>
      <div class="tiers-grid">
        {% for tier in sponsorshipTiers %}
        <div class="tier-card">
          <h3>{{ tier.type }}</h3>
          <div class="amount">{{ tier.amount }}</div>
          <div class="description">{{ tier.description }}</div>
          <p>{{ tier.benefits }}</p>
        </div>
        {% endfor %}
      </div>
    </div>
    {% endif %}

    {% if projects and projects.items and projects.items.length > 0 %}
    <div class="projects-section">
      <h2>{{ projects.title }}</h2>
      <ul class="projects-list">
        {% for item in projects.items %}
        <li>{{ item }}</li>
        {% endfor %}
      </ul>
    </div>
    {% endif %}

    <div class="featured-animal-section">
      {% if featuredAnimal.image.src %}
        <div class="animal-image">
          <img src="{{ featuredAnimal.image.src | url }}" alt="{{ featuredAnimal.image.alt }}" class="eva-photo">
        </div>
      {% endif %}
      <div class="animal-info">
        <h3>Meet {{ featuredAnimal.name }}</h3>
        <p>{{ featuredAnimal.description }}</p>
      </div>
    </div>

    <div class="contact-section">
      <div class="contact-box">
        <h3>{{ contactInfo.title }}</h3>
        <p>{{ contactInfo.description }}</p>

        <div class="contact-details">
          <div class="contact-item">
            <strong>Phone:</strong> {{ contactInfo.phone }}
          </div>
          <div class="contact-item">
            <strong>Email:</strong> {{ contactInfo.email }}
          </div>
          <div class="contact-item">
            <strong>Address:</strong><br>
            {{ contactInfo.address.street }}<br>
            {{ contactInfo.address.city }}, {{ contactInfo.address.state }} {{ contactInfo.address.zip }}
          </div>
        </div>

        <div class="cta-buttons">
          <a href="/contact-hours/" class="btn btn-primary">Contact Us</a>
          <a href="/donate/" class="btn btn-secondary">Donate Now</a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    background: linear-gradient(135deg, #4a7c59 0%, #6b9e77 100%);
    color: white;
    padding: 4rem 0;
    margin-bottom: 3rem;
  }

  .hero h1 {
    font-size: 3rem;
    margin: 0;
    text-align: center;
  }

  .sponsorship-main {
    padding: 2rem 0 4rem;
  }

  .overview-section {
    text-align: center;
    margin-bottom: 3rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .overview-text {
    font-size: 1.2rem;
    line-height: 1.8;
    color: #333;
  }

  .sponsorship-options {
    margin-bottom: 4rem;
  }

  .sponsorship-options h2 {
    text-align: center;
    color: #4a7c59;
    font-size: 2.2rem;
    margin-bottom: 2rem;
  }

  .tiers-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .tier-card {
    background: #f8f8f8;
    border: 2px solid #4a7c59;
    border-radius: 12px;
    padding: 2rem;
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .tier-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(74, 124, 89, 0.15);
  }

  .tier-card h3 {
    color: #4a7c59;
    font-size: 1.4rem;
    margin-bottom: 1rem;
    font-weight: 600;
  }

  .amount {
    font-size: 2.5rem;
    font-weight: bold;
    color: #4a7c59;
    margin-bottom: 0.5rem;
  }

  .description {
    color: #666;
    font-style: italic;
    margin-bottom: 1rem;
    font-size: 1.1rem;
  }

  .tier-card p {
    line-height: 1.6;
    color: #555;
  }

  .projects-section {
    margin-bottom: 4rem;
    text-align: center;
  }

  .projects-section h2 {
    color: #4a7c59;
    font-size: 2rem;
    margin-bottom: 1.5rem;
  }

  .projects-list {
    list-style: none;
    padding: 0;
    max-width: 600px;
    margin: 0 auto;
  }

  .projects-list li {
    background: #f0f8f2;
    padding: 1rem 1.5rem;
    margin-bottom: 0.5rem;
    border-radius: 8px;
    border-left: 4px solid #4a7c59;
    font-weight: 500;
    color: #333;
  }

  .featured-animal-section {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 3rem;
    align-items: center;
    margin-bottom: 4rem;
    background: #fafafa;
    padding: 3rem;
    border-radius: 12px;
  }

  .eva-photo {
    width: 100%;
    border-radius: 12px;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
  }

  .animal-info h3 {
    color: #4a7c59;
    font-size: 1.8rem;
    margin-bottom: 1rem;
  }

  .animal-info p {
    font-size: 1.1rem;
    line-height: 1.7;
    color: #555;
  }

  .contact-section {
    max-width: 600px;
    margin: 0 auto;
  }

  .contact-box {
    background: #f8f8f8;
    border: 1px solid #e0e0e0;
    border-radius: 12px;
    padding: 2.5rem;
    text-align: center;
  }

  .contact-box h3 {
    color: #4a7c59;
    font-size: 1.6rem;
    margin-bottom: 1rem;
  }

  .contact-box > p {
    margin-bottom: 2rem;
    color: #666;
    line-height: 1.6;
  }

  .contact-details {
    margin-bottom: 2rem;
    text-align: left;
  }

  .contact-item {
    margin-bottom: 1rem;
    color: #333;
    line-height: 1.6;
  }

  .contact-item strong {
    color: #4a7c59;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .btn {
    display: inline-block;
    padding: 0.8rem 2rem;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
  }

  .btn-primary {
    background: #4a7c59;
    color: white;
  }

  .btn-primary:hover {
    background: #5a8c69;
    transform: translateY(-2px);
  }

  .btn-secondary {
    background: white;
    color: #4a7c59;
    border: 2px solid #4a7c59;
  }

  .btn-secondary:hover {
    background: #4a7c59;
    color: white;
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
      padding: 0 1rem;
    }

    .tiers-grid {
      grid-template-columns: 1fr;
    }

    .featured-animal-section {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .animal-image {
      order: -1;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }

    .btn {
      width: 200px;
    }

    .sponsorship-main {
      padding: 1rem 0 3rem;
    }

    .container {
      padding: 0 1rem;
    }
  }
</style>