---
layout: layouts/base.njk
---

<div class="hero">
  <div class="container">
    <h1>{{ hero.title }}</h1>
  </div>
</div>

<section class="sponsorship-main">
  <div class="container">
    <div class="overview-section">
      <p class="overview-text">{{ overview.description }}</p>
    </div>

    {% if petKennelSponsorship %}
    <div class="sponsorship-section">
      <h2>{{ petKennelSponsorship.title }}</h2>
      <p>{{ petKennelSponsorship.description }}</p>
    </div>
    {% endif %}

    {% if buildingProjectSponsorship %}
    <div class="sponsorship-section">
      <h2>{{ buildingProjectSponsorship.title }}</h2>
      <p>{{ buildingProjectSponsorship.description }}</p>
    </div>
    {% endif %}

    {% if sponsorshipOptions %}
    <div class="sponsorship-options">
      <h2>{{ sponsorshipOptions.title }}</h2>
      <div class="tiers-grid">
        {% if sponsorshipOptions.petKennel %}
        <div class="tier-card">
          <h3>{{ sponsorshipOptions.petKennel.title }}</h3>
          <div class="amount">{{ sponsorshipOptions.petKennel.amount }}</div>
        </div>
        {% endif %}
        {% if sponsorshipOptions.buildingProject %}
        <div class="tier-card">
          <h3>{{ sponsorshipOptions.buildingProject.title }}</h3>
          <div class="amount">{{ sponsorshipOptions.buildingProject.amount }}</div>
        </div>
        {% endif %}
      </div>
    </div>
    {% endif %}

    <div class="featured-animal-section">
      {% if featuredAnimal.image.src %}
        <div class="animal-image">
          <img src="{{ featuredAnimal.image.src | url }}" alt="{{ featuredAnimal.image.alt }}" class="eva-photo">
        </div>
      {% endif %}
      <div class="animal-info">
        <h3>Meet {{ featuredAnimal.name }}</h3>
        <p>{{ featuredAnimal.description }}</p>
      </div>
    </div>

  </div>
</section>

<style>
  .hero {
    background: linear-gradient(135deg, #4a7c59 0%, #6b9e77 100%);
    color: white;
    padding: 4rem 0;
    margin-bottom: 3rem;
  }

  .hero h1 {
    font-size: 3rem;
    margin: 0;
    text-align: center;
  }

  .sponsorship-main {
    padding: 2rem 0 4rem;
  }

  .overview-section {
    text-align: center;
    margin-bottom: 3rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .overview-text {
    font-size: 1.2rem;
    line-height: 1.8;
    color: #333;
  }

  .sponsorship-section {
    margin-bottom: 3rem;
  }

  .sponsorship-section h2 {
    color: #4a7c59;
    font-size: 1.8rem;
    margin-bottom: 1.5rem;
  }

  .sponsorship-section p {
    line-height: 1.8;
    color: #333;
    margin-bottom: 1rem;
  }

  .sponsorship-options {
    margin-bottom: 4rem;
  }

  .sponsorship-options h2 {
    text-align: center;
    color: #4a7c59;
    font-size: 2.2rem;
    margin-bottom: 2rem;
  }

  .tiers-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .tier-card {
    background: #f8f8f8;
    border: 2px solid #4a7c59;
    border-radius: 12px;
    padding: 2rem;
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .tier-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(74, 124, 89, 0.15);
  }

  .tier-card h3 {
    color: #4a7c59;
    font-size: 1.4rem;
    margin-bottom: 1rem;
    font-weight: 600;
  }

  .amount {
    font-size: 2.5rem;
    font-weight: bold;
    color: #4a7c59;
    margin-bottom: 0.5rem;
  }

  .description {
    color: #666;
    font-style: italic;
    margin-bottom: 1rem;
    font-size: 1.1rem;
  }

  .tier-card p {
    line-height: 1.6;
    color: #555;
  }


  .featured-animal-section {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 3rem;
    align-items: center;
    margin-bottom: 4rem;
    background: #fafafa;
    padding: 3rem;
    border-radius: 12px;
  }

  .eva-photo {
    width: 100%;
    border-radius: 12px;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
  }

  .animal-info h3 {
    color: #4a7c59;
    font-size: 1.8rem;
    margin-bottom: 1rem;
  }

  .animal-info p {
    font-size: 1.1rem;
    line-height: 1.7;
    color: #555;
  }


  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
      padding: 0 1rem;
    }

    .tiers-grid {
      grid-template-columns: 1fr;
    }

    .featured-animal-section {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .animal-image {
      order: -1;
    }


    .sponsorship-main {
      padding: 1rem 0 3rem;
    }

    .container {
      padding: 0 1rem;
    }
  }
</style>